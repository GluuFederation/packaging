#!/bin/bash

set -e

echo "Checking to make sure Gluu Server is down..."

case $1 in
    remove|deconfigure|upgrade)
        if [ -f /sbin/gluu-serverd-4.0 ]; then
                /sbin/gluu-serverd-4.0 stop
        fi
        exit 0
        ;;
    failed-upgrade)
        exit 2
        ;;
    *)
        echo "Prerm called with unknown argument '$1'" >&2
        exit 0
        ;;
esac
exit $?
